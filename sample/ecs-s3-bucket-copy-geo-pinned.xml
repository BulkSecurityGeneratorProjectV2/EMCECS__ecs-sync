<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-3.0.xsd">

    <!-- This is the required 'root' bean that will bootstrap the operation -->
    <bean name="sync" class="com.emc.ecs.sync.EcsSync">
        <property name="source" ref="source"/>
        <property name="target" ref="target"/>

        <!-- database file -->
        <property name="dbService">
            <bean class="com.emc.ecs.sync.service.MySQLDbService">
                <constructor-arg value="jdbc:mysql://localhost:3306/ecs_sync?autoReconnectForPools=true"/>
                <constructor-arg value="ecssync"/>
                <constructor-arg value="ecs-sync-db"/>
                <property name="objectsTableName" value="ecs_migration"/>
            </bean>
        </property>

        <!-- adjust threading to increase/throttle performance -->
        <property name="syncThreadCount" value="8"/>
        <property name="rememberFailed" value="false"/>

        <!-- adjust logging output (debug, verbose, quiet, silent) - default is quiet -->
        <!--property name="logLevel" value="verbose" /-->
        <property name="logLevel" value="verbose"/>

        <!-- reads back written objects and compares MD5 -->
        <property name="verify" value="true"/>

        <!-- uncomment if the source files are still changing and you want to run incremental syncs -->
        <!--property name="reprocessObjects" value="true" /-->
    </bean>

    <!-- The source -->
    <bean name="source" class="com.emc.ecs.sync.source.EcsS3Source">
        <!-- source key list file -->
        <property name="sourceKeyList" value="/path/to/keys.lst"/>
        <property name="protocol" value="http"/>
        <property name="vdcs">
            <list>
                <bean class="com.emc.rest.smart.ecs.Vdc">
                    <constructor-arg>
                        <array value-type="java.lang.String">
                            <value>10.10.5.11</value>
                            <value>10.10.5.12</value>
                        </array>
                    </constructor-arg>
                </bean>
                <bean class="com.emc.rest.smart.ecs.Vdc">
                    <constructor-arg>
                        <array value-type="java.lang.String">
                            <value>10.10.6.11</value>
                            <value>10.10.6.12</value>
                        </array>
                    </constructor-arg>
                </bean>
                <bean class="com.emc.rest.smart.ecs.Vdc">
                    <constructor-arg>
                        <array value-type="java.lang.String">
                            <value>10.10.7.11</value>
                            <value>10.10.7.12</value>
                        </array>
                    </constructor-arg>
                </bean>
            </list>
        </property>
        <property name="accessKey" value="user@isp"/>
        <property name="secretKey" value="abcdefg0123456789"/>
        <property name="bucketName" value="my-bucket"/>
        <property name="monitorPerformance" value="true"/>
        <property name="geoPinningEnabled" value="true"/>
    </bean>

    <!-- The target -->
    <bean name="target" class="com.emc.ecs.sync.target.EcsS3Target">
        <property name="protocol" value="http"/>
        <property name="vdcs">
            <list>
                <bean class="com.emc.rest.smart.ecs.Vdc">
                    <constructor-arg>
                        <array value-type="java.lang.String">
                            <value>10.10.10.11</value>
                            <value>10.10.10.12</value>
                        </array>
                    </constructor-arg>
                </bean>
                <bean class="com.emc.rest.smart.ecs.Vdc">
                    <constructor-arg>
                        <array value-type="java.lang.String">
                            <value>10.10.11.11</value>
                            <value>10.10.11.12</value>
                        </array>
                    </constructor-arg>
                </bean>
                <bean class="com.emc.rest.smart.ecs.Vdc">
                    <constructor-arg>
                        <array value-type="java.lang.String">
                            <value>10.10.12.11</value>
                            <value>10.10.12.12</value>
                        </array>
                    </constructor-arg>
                </bean>
            </list>
        </property>
        <property name="port" value="9020"/>
        <property name="accessKey" value="ace7d3da351242bcb095eb841ad5d371"/>
        <property name="secretKey" value="HkAyrXoEYUQ3VCMCaaViS1t5pdS="/>
        <property name="bucketName" value="my-bucket"/>
        <property name="createBucket" value="true"/>
        <property name="includeVersions" value="true"/>
        <property name="monitorPerformance" value="true"/>
        <property name="geoPinningEnabled" value="true"/>
    </bean>
</beans>